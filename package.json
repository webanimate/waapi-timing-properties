{
  "name": "waapi-timing-properties",
  "version": "1.3.0",
  "description": "Timing properties for animation effects used in Web Animations API.",
  "main": "src/index.js",
  "author": "Web Animate",
  "license": "MIT",
  "private": false,
  "homepage": "https://github.com/webanimate/waapi-timing-properties#readme",
  "unpkg": "dist/wtproperties.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webanimate/waapi-timing-properties.git"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --fix \"**/*.*\"",
    "fix:prettier": "prettier --write \"**/*.*\"",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint \"**/*.*\"",
    "lint:prettier": "prettier --check \"**/*.*\"",
    "test": "yarn fix && jest && yarn build",
    "up": "yarn upgrade-interactive && yarn outdated"
  },
  "dependencies": {
    "lodash.isnumber": "^3.0.3",
    "lodash.isobject": "^3.0.2",
    "lodash.isstring": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "babel-jest": "^25.5.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-json": "^2.1.1",
    "jest": "^25.5.1",
    "prettier": "^2.0.4",
    "rollup": "^2.6.1",
    "rollup-plugin-terser": "^5.3.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "html",
      "json"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:json/recommended",
      "prettier"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ]
  },
  "prettier": {
    "printWidth": 280,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "keywords": [
    "waapi",
    "web",
    "animations",
    "api",
    "web-animations-api",
    "css",
    "transitions"
  ]
}
